{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable",
		]
	},
	"include": [
		"src/**/*.ts",
		"index.d.ts"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}